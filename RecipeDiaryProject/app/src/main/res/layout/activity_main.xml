<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFEBEE">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#F48FB1"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="15dp"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_categories"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#F48FB1"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:fontFamily="serif-monospace"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_home"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/iv_meal"
            android:layout_width="386dp"
            android:layout_height="196dp"
            android:layout_marginTop="4dp"
            android:padding="2dp"
            android:src="@drawable/meal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="@+id/tv_menu"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu" />

        <TextView
            android:id="@+id/tv_meals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEALS"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_meal"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/iv_dessert"
            android:layout_width="386dp"
            android:layout_height="196dp"
            android:layout_marginTop="4dp"
            android:padding="2dp"
            android:src="@drawable/dessert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="@+id/tv_menu"
            app:layout_constraintTop_toBottomOf="@+id/tv_meals" />

        <TextView
            android:id="@+id/tv_dessert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESSERT"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_dessert"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/iv_fastfood"
            android:layout_width="386dp"
            android:layout_height="196dp"
            android:layout_marginTop="4dp"
            android:padding="2dp"
            android:src="@drawable/fastfood"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="@+id/tv_menu"
            app:layout_constraintTop_toBottomOf="@+id/tv_dessert" />

        <TextView
            android:id="@+id/tv_fastfood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAST FOOD"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_fastfood"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/iv_cocktail"
            android:layout_width="386dp"
            android:layout_height="196dp"
            android:layout_marginTop="4dp"
            android:padding="2dp"
            android:src="@drawable/cocktail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="@+id/tv_menu"
            app:layout_constraintTop_toBottomOf="@+id/tv_fastfood" />

        <TextView
            android:id="@+id/tv_cocktail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COCKTAIL"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_cocktail"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/iv_tutorial"
            android:layout_width="386dp"
            android:layout_height="196dp"
            android:layout_marginTop="4dp"
            android:padding="2dp"
            android:src="@drawable/video_tutorial"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="@+id/tv_cocktail"
            app:layout_constraintTop_toBottomOf="@+id/tv_cocktail" />

        <TextView
            android:id="@+id/tv_tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TUTORIAL"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_tutorial"
            android:textAlignment="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>