<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu Selection"
            android:textStyle="bold"
            android:textSize="36sp"
            android:textColor="#000000"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:fontFamily="@font/typewcond"
            android:padding="16dp"
            android:textAlignment="center"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/iv_food"
            android:layout_width="386dp"
            android:layout_height="196dp"
            android:layout_marginEnd="4dp"
            android:padding="2dp"
            android:src="@drawable/foods"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu" />

        <TextView
            android:id="@+id/tv_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOOD"
            android:textStyle="bold"
            android:fontFamily="@font/cambria"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_food"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/iv_cocktail"
            android:layout_width="386dp"
            android:layout_height="196dp"
            android:layout_marginEnd="4dp"
            android:padding="2dp"
            android:src="@drawable/drinks"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_food" />

        <TextView
            android:id="@+id/tv_cocktail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COCKTAIL"
            android:textStyle="bold"
            android:fontFamily="@font/cambria"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_cocktail"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/iv_tutorial"
            android:layout_width="386dp"
            android:layout_height="196dp"
            android:layout_marginEnd="4dp"
            android:padding="2dp"
            android:src="@drawable/tutorial"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_cocktail" />

        <TextView
            android:id="@+id/tv_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TUTORIAL"
            android:textStyle="bold"
            android:fontFamily="@font/cambria"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_tutorial"
            android:textAlignment="center"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>